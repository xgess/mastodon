%tr
  %td= proof.provider
  %td.account
    - provider_pic_url = proof.remote_profile_pic_url || default_provider_pic_url(proof.provider)
    = link_to proof.profile_url do
      = image_tag provider_pic_url, size: 40, class: :account__avatar
      = proof.provider_username
  %td
    - status = proof.is_live ? 'Active' : 'Inactive'
    - icon = proof.is_live ? 'fa-check-circle' : 'fa-times-circle'
    %span{ class: status.downcase }
      %i{ class: "fa #{icon}" }
      = status
  %td.proof
    - if proof.remote_url
      = link_to raw('<i class="fa fa-external-link"></i>'), proof.remote_url
